@require '_mixins'

.demo-demo
  margin 0 auto
  max-width 550px
  .btn
    min-width 100px

.demo-demo-editor
  padding 15px 25px
  height 400px
  background-color #f1f1f1
  color #717171
  font-size 12px
  font-family monospace
  border 0
  resize none
  border-radius(6px)
  box-sizing(border-box)

.demo-demo-previewer
  height 400px

.demo-demo-button-row
  text-align center

+breakpoint('xs')
  .demo-demo
    margin 60px 0
