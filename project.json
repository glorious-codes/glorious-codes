{
  "index": {
    "source": {
      "file": "src/index.html"
    },
    "dist": {
      "root": "dist"
    }
  },
  "scripts": {
    "source": {
      "root": "src/scripts/",
      "files": "src/scripts/**/*.js",
      "entry": "src/scripts/index.js"
    },
    "dist": {
      "root": "dist",
      "filename": {
        "prod": "[name]-[hash].js",
        "dev": "[name].js"
      }
    }
  },
  "styles": {
    "source": {
      "root": "src/styles/"
    },
    "dist": {
      "filename": {
        "prod": "[name]-[hash].css",
        "dev": "[name].css"
      }
    }
  },
  "images": {
    "source": {
      "context": "src"
    },
    "dist": {
      "filename": "[path][name]-[hash].[ext]"
    }
  },
  "favicon": {
    "source": {
      "file": "src/images/favicon-glorious-codes.png"
    }
  },
  "tests": {
    "source": {
      "files": "src/scripts/**/!(index|router).js"
    }
  },
  "environments": {
    "source": {
      "root": "environments"
    }
  }
}
