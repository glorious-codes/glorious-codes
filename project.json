{
  "index": {
    "source": {
      "file": "src/index.html"
    },
    "dist": {
      "root": "dist"
    }
  },
  "scripts": {
    "source": {
      "root": "src/scripts/",
      "files": "src/scripts/**/*.js",
      "entry": "src/scripts/app.js"
    },
    "dist": {
      "root": "dist",
      "filename": {
        "production": "[name]-[contenthash].js",
        "development": "[name].js"
      }
    }
  },
  "styles": {
    "source": {
      "root": "src/styles/"
    },
    "dist": {
      "filename": {
        "production": "[name]-[contenthash].css",
        "development": "[name].css"
      }
    }
  },
  "images": {
    "source": {
      "root": "src/images/",
      "context": "src"
    },
    "dist": {
      "filename": "[path][name].[ext]"
    }
  },
  "fonts": {
    "dist": {
      "root": "fonts/[name].[ext]"
    }
  },
  "favicon": {
    "source": {
      "file": "src/images/favicon-compilorama.png"
    }
  },
  "tests": {
    "source": {
      "files": "src/scripts/**/!(app|routes).js"
    }
  },
  "mocks": {
    "source": {
      "root": "src/mocks/"
    }
  },
  "environments": {
    "source": {
      "root": "environments"
    }
  }
}
